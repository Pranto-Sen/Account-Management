@page
@model Account_Management.Pages.ChartOfAccounts.CreateModel

@{
    ViewData["Title"] = "Create Account";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary">Create Account</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Account.AccountName" class="form-label"></label>
                    <input asp-for="Account.AccountName" class="form-control" placeholder="Enter account name" />
                    <span asp-validation-for="Account.AccountName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Account.AccountType" class="form-label"></label>
                    <select asp-for="Account.AccountType" class="form-select">
                        <option value="Cash">Cash</option>
                        <option value="Bank">Bank</option>
                        <option value="Receivable">Receivable</option>
                        <option value="Payable">Payable</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Account.ParentAccountId" class="form-label"></label>
                    <select asp-for="Account.ParentAccountId" class="form-select">
                        <option value="">None</option>
                        @foreach (var account in Model.Accounts)
                        {
                            <option value="@account.AccountId">@account.AccountName</option>
                        }
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Account.IsActive" class="form-label"></label>
                    <div class="form-check">
                        <input asp-for="Account.IsActive" type="checkbox" class="form-check-input" />
                        <label class="form-check-label">Active</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100">Create</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}