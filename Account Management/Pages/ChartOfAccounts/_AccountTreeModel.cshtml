@page
@model Account_Management.Pages.ChartOfAccounts.IndexModel.AccountNode

<li class="list-group-item">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <strong>@Model.Account.AccountName</strong>
            <span class="text-muted">(@Model.Account.AccountType)</span>
        </div>
        <div>
            <a class="btn btn-sm btn-primary me-1" asp-page="Edit" asp-route-id="@Model.Account.AccountId">Edit</a>
            <a class="btn btn-sm btn-danger" asp-page="Delete" asp-route-id="@Model.Account.AccountId">Delete</a>
        </div>
    </div>

    @if (Model.Children.Any())
    {
        <ul class="list-group list-group-flush ms-4 mt-2 border-start ps-3">
            @foreach (var child in Model.Children)
            {
                @await Html.PartialAsync("_AccountTree", child)
            }
        </ul>
    }
</li>