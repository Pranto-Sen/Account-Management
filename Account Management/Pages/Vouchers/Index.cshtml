
@page
@model Account_Management.Pages.Vouchers.IndexModel

@{
    ViewData["Title"] = "Vouchers";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary">Vouchers</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="text-end mb-3">
                <a asp-page="Create" class="btn btn-primary btn-lg">Create New Voucher</a>
            </div>

            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Voucher ID</th>
                        <th>Type</th>
                        <th>Date</th>
                        <th>Reference No</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var voucher in Model.Vouchers)
                    {
                        <tr>
                            <td>@voucher.VoucherId</td>
                            <td>@voucher.VoucherType</td>
                            <td>@voucher.VoucherDate.ToShortDateString()</td>
                            <td>@voucher.ReferenceNo</td>
                            <td>
                                <a asp-page="Create" asp-route-id="@voucher.VoucherId" class="btn btn-info btn-sm">View</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text-center mt-3">
                <form method="post" asp-page-handler="Export">
                    <button type="submit" class="btn btn-success btn-lg">Export to Excel</button>
                </form>
            </div>
        </div>
    </div>
</div>