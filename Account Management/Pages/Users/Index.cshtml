@page
@model Account_Management.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary">Manage Users</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Email</td>
                            <td>@string.Join(", ", user.Roles)</td>
                            <td>
                                <a asp-page="ManageRoles" asp-route-userId="@user.Id" class="btn btn-info btn-sm">Manage Roles</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>